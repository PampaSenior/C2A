{% extends 'base.html.twig' %}

{%~ if Forme == 0 %}
  {% set Modele = 'accueil/_forme-grille.html.twig' %}
{%~ else %}
  {% set Modele = 'accueil/_forme-sapin.html.twig' %}
{%~ endif %}

{%~ if Style == 0 %}
  {% set Dessin = 'accueil/_cadeau.html.twig' %}
{%~ else %}
  {% set Dessin = 'accueil/_boule.html.twig' %}
{%~ endif %}

{% block body %}
  {{~ Indentation }}<div>
  {{~ Indentation }}  <div class="neige-grande position-fixe z-index-n1"></div>
  {{~ Indentation }}  <div class="neige-moyenne position-fixe z-index-n1"></div>
  {{~ Indentation }}  <div class="neige-petite position-fixe z-index-n1"></div>
  {{~ Indentation }}</div>
  {{~ Indentation }}<div class="mx-auto col-10 text-center">
  {{~ Indentation }}  <p class="my-5 h1 d-flex justify-content-center align-items-center">
  {{~ Indentation }}    <i class="me-4 fas fa-holly-berry fa-2x text-danger"></i>
  {{~ Indentation }}    <span id="Titre" style="color:{{ CouleurTexte }}">{{ Titre }}</span>
  {{~ Indentation }}    <i class="ms-4 fas fa-candy-cane fa-2x text-success"></i>
  {{~ Indentation }}  </p>
  {%-
  include Modele
  with { 'Indentation' : Indentation ~ '  ',
         'Noel' : Noel,
         'Modele' : Dessin,
         'Style' : Style,
         'Classe' : Taille,
         'Couleur' : CouleurTexte }
  -%}
  {%~ if J25 == 1 %}
    {%-
    include 'modale/BonneFete.html.twig'
    with { 'Indentation' : Indentation ~ '  ',
           'Titre' : TitreModale,
           'Texte' : TexteModale,
           'CouleurFond' : CouleurFond,
           'CouleurTexte' : CouleurTexte }
    ~%}
  {%~ endif %}
  {{~ Indentation }}</div>
{% endblock %}

{%~ block script %}
  {{- parent() -}}
  {%~ if J25 == 1 %}
    {{~ Indentation }}<script src="{{ path('Accueil') }}{{ Application.getDossierScript() }}4-BonneFete.js"></script>
  {%~ endif %}
  {{~ Indentation }}<script src="{{ path('Accueil') }}{{ Application.getDossierScript() }}5-JourAvant.js"></script>
  {{~ Indentation }}<script src="{{ path('Accueil') }}{{ Application.getDossierScript() }}6-JourActuel.js"></script>
  {{~ Indentation }}<script src="{{ path('Accueil') }}{{ Application.getDossierScript() }}7-JourChange.js"></script>
{%~ endblock %}