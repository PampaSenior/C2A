{% set JourSpecial = 1 -%}

{%~ if Noel == 0 %}
  {% set Max = [1,2,3,4,5,4,1,1,3] %}
{%~ else %}
  {% set Max = [1,2,3,4,5,6,1,3] %}
{%~ endif %}

{% set Compteur = 0 -%}

{% for i in 0..Max|length-1 %}
  {{~ Indentation }}<div class="mx-auto d-flex justify-content-center">
  {%~ for j in 0..Max[i]-1 %}
    {%~ set Compteur = Compteur+1 %}
    {%~
    include Modele
    with { 'Indentation' : Indentation ~ '  ',
           'Style' : Style,
           'Bordure' : Bordure,
           'Taille' : Taille,
           'Couleur' : Couleur,
           'JourSpecial' : JourSpecial,
           'Jour' : Compteur }
    ~%}
  {%~ endfor %}
  {{~ Indentation }}</div>
{% endfor %}